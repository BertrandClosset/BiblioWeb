{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Liste des Thèmes</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.libelle }}</td>
                <td><a href="{{ path('partieA_theme_show', { 'id': entity.id }) }}">Détails</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('partieA_theme_new') }}">
                Ajout d'un nouveau Thème
            </a>
        </li>
    </ul>
    {% endblock %}
